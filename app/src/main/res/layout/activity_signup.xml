<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="@drawable/login">


    <ScrollView
        android:id="@+id/scv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittext2"
            android:drawableLeft="@drawable/ic_user"
            android:hint="Name"
            android:textColorHint="@android:color/black"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:hint="E-mail"
            android:textColorHint="@android:color/black"
            android:background="@drawable/email"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/phoneno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:hint="Phone No."
            android:textColorHint="@android:color/black"
            android:background="@drawable/phone"
            android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
            android:digits="0123456789+"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext2"
            android:drawableLeft="@drawable/ic_security"
            android:hint="Password"
            android:textColorHint="@android:color/black"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password must have contain atleast 4 letters in that one Uppercase character,one special character and one digit"
            android:textSize="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/cpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext2"
            android:drawableLeft="@drawable/ic_security"
            android:hint="Confirm Password"
            android:textColorHint="@android:color/black"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button5"
            android:fontFamily="sans-serif-condensed"
            android:text="Create account"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:onClick="selectfaculty"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>